<Window x:Class="Licencjatt.Window10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Licencjatt"
        mc:Ignorable="d"
        Title="Window10" Height="500" Width="1000" Background="Black">
    <Window.Resources>
        <LinearGradientBrush x:Key="Zielony"
                             StartPoint="0,0.5"
                             EndPoint="1,0.5">
            <GradientStop Color="#FF2B7A06" Offset="0.0"/>
            <GradientStop Color="Black" Offset="1.0"/>

        </LinearGradientBrush>
        <Style x:Key="Zielonyy">
            <Setter Property="Control.Background" Value="{StaticResource Zielony}" />
        </Style>
    </Window.Resources>
    <Grid>
        <Ellipse   Fill="{StaticResource Zielony}" Margin="32,42,44,59" />
        <TextBlock Text="Niestety nie :(" FontSize="50" TextWrapping="Wrap" FontWeight="Bold" Margin="200" />

    </Grid>
</Window>

